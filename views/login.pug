doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Login
    style.
      body {
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
          margin: 0;
          font-family: Arial, sans-serif;
          background-color: #f0f0f0; /* Adjust background color if needed */
      }
      .login-box {
          background-color: #f2f2f2;
          padding: 20px;
          border-radius: 8px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          text-align: center;
          width: 300px; /* Adjust the width as needed */
      }
      form {
          display: flex;
          flex-direction: column;
          align-items: center;
      }
  body
    div.login-box`
      h1 Login
      form#loginForm(action='/login', method='POST')
        input(type='email', name='email', placeholder='Email', required)
        br
        input(type='password', name='password', placeholder='Password', required)
        br
        input(type='submit', value='Login')
      button(onclick='goToRegister()') Go to Register
    script.
      function goToRegister() {
          window.location.href = '/register';
      }
      const loginForm = document.getElementById('loginForm');
      loginForm.addEventListener('submit', async (event) => {
          event.preventDefault(); // Prevent default form submission
          
          const formData = {
              email: loginForm.querySelector('input[name="email"]').value,
              password: loginForm.querySelector('input[name="password"]').value
          };
          
          const responseData = await fetch('/login', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              },
              body: JSON.stringify(formData)
          });
          
          const responseJson = await responseData.json();
          if (responseData.status === 200) {
              // Successful login, redirect to dashboard
              window.location.href = '/dashboard';
          } else {
              // Display error message in a pop-up for status codes 400 or 500
              alert(responseJson.message || 'An error occurred');
          }
      })
